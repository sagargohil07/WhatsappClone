<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/toolBarTop"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="@color/tool_bar"
            android:gravity="center_vertical"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/toolbar_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_16"
                android:background="#00FFFFFF"
                android:src="@drawable/ic_arrow_back"
                android:tint="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/linearLayoutCompat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_24"
                android:gravity="center_vertical"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/toolbar_back"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/toolbar_name"
                    style="@style/TextStyle_Medium_16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/storage_and_data"
                    android:textColor="@color/white"
                    app:layout_constraintBottom_toBottomOf="@id/toolbar_image"
                    app:layout_constraintStart_toEndOf="@id/toolbar_image"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingHorizontal="@dimen/dimen_16"
            android:paddingVertical="@dimen/dimen_10">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/dimen_50"
                android:layout_height="@dimen/dimen_50"
                android:layout_weight="1"
                android:src="@drawable/ic_folder"
                android:tint="@color/text_gray" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_20"
                android:layout_weight="1"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/TextStyle_Regular_14"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/manage_storage" />

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/TextStyle_Regular_12"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/_1_5_gb"
                    android:textColor="@color/text_gray" />

            </androidx.appcompat.widget.LinearLayoutCompat>


        </androidx.appcompat.widget.LinearLayoutCompat>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/gray" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingHorizontal="@dimen/dimen_16"
            android:paddingVertical="@dimen/dimen_10">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/dimen_50"
                android:layout_height="@dimen/dimen_50"
                android:layout_weight="1"
                android:src="@drawable/ic_chart"
                android:tint="@color/text_gray" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_20"
                android:layout_weight="1"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/TextStyle_Regular_14"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/network_usage" />

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/TextStyle_Regular_12"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/_8_5_gb_sent_2_5_gb_received"
                    android:textColor="@color/text_gray" />

            </androidx.appcompat.widget.LinearLayoutCompat>


        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_16"
            android:gravity="center"
            android:paddingStart="@dimen/dimen_60"
            android:paddingEnd="@dimen/dimen_16">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dimen_10"
                android:layout_weight="1"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/TextStyle_Regular_14"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/use_less_data_for_calls" />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivSwitch1"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:src="@drawable/ic_switch_off"
                android:tint="@color/text_gray" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_16"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingStart="@dimen/dimen_60"
            android:paddingEnd="@dimen/dimen_16">

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/TextStyle_Regular_14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/proxy" />

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/TextStyle_Regular_12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/off"
                android:textColor="@color/text_gray" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/gray" />

        <androidx.appcompat.widget.AppCompatTextView
            style="@style/TextStyle_Medium_12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/dimen_16"
            android:paddingTop="@dimen/dimen_16"
            android:text="@string/media_auto_download"
            android:textColor="@color/text_gray" />

        <androidx.appcompat.widget.AppCompatTextView
            style="@style/TextStyle_Regular_12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/dimen_16"
            android:paddingTop="@dimen/dimen_5"
            android:text="@string/voice_messages_are_always_automatically_downloaded"
            android:textColor="@color/text_gray" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_16"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingStart="@dimen/dimen_60"
            android:paddingTop="@dimen/dimen_24"
            android:paddingEnd="@dimen/dimen_16">

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/TextStyle_Regular_14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/when_using_mobile_data" />

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/TextStyle_Regular_12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/no_media"
                android:textColor="@color/text_gray" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_16"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingStart="@dimen/dimen_60"
            android:paddingTop="@dimen/dimen_16"
            android:paddingEnd="@dimen/dimen_16">

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/TextStyle_Regular_14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/when_connected_on_wi_fi" />

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/TextStyle_Regular_12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/no_media"
                android:textColor="@color/text_gray" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_16"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingStart="@dimen/dimen_60"
            android:paddingTop="@dimen/dimen_16"
            android:paddingEnd="@dimen/dimen_16">

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/TextStyle_Regular_14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/when_roaming" />

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/TextStyle_Regular_12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/no_media"
                android:textColor="@color/text_gray" />

        </androidx.appcompat.widget.LinearLayoutCompat>


    </androidx.appcompat.widget.LinearLayoutCompat>

</layout>