<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/country_code_picker_bg"
        android:backgroundTint="@color/background_common"
        android:elevation="@dimen/dimen_2"
        android:orientation="vertical">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <View
                android:layout_width="40dp"
                android:layout_height="4dp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dimen_10"
                android:layout_marginBottom="@dimen/dimen_10"
                android:background="@drawable/edittext_chat"
                android:backgroundTint="@color/text_gray" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivClose"
                android:layout_width="@dimen/dimen_20"
                android:layout_height="@dimen/dimen_20"
                android:layout_marginStart="@dimen/dimen_10"
                android:src="@drawable/ic_close"
                android:tint="@color/text_gray" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/llAppLanguageAction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingHorizontal="@dimen/dimen_16">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dimen_50"
                    android:src="@drawable/bg_circle"
                    android:tint="@color/text_gray" />

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/TextStyle_Medium_18"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/dimen_20"
                    android:text="@string/create_a_channel_to_reach_unlimited_followers"
                    android:textAlignment="center" />

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/dimen_10"
                    android:gravity="center_vertical">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="@dimen/dimen_25"
                        android:layout_height="@dimen/dimen_25"
                        android:src="@drawable/ic_earth"
                        android:tint="@color/green_100" />

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen_16"
                        android:layout_marginEnd="@dimen/dimen_24"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <androidx.appcompat.widget.AppCompatTextView
                            style="@style/TextStyle_Regular_14"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Anyone can discover your channel"
                            android:textColor="@color/text_color" />

                        <androidx.appcompat.widget.AppCompatTextView
                            style="@style/TextStyle_Regular_14"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Channels are public, so anyone can find them and see 30 days of history."
                            android:textColor="@color/text_gray" />

                    </androidx.appcompat.widget.LinearLayoutCompat>

                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/dimen_10"
                    android:gravity="center_vertical">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="@dimen/dimen_25"
                        android:layout_height="@dimen/dimen_25"
                        android:src="@drawable/ic_lock"
                        android:tint="@color/green_100" />

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen_16"
                        android:layout_marginEnd="@dimen/dimen_24"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <androidx.appcompat.widget.AppCompatTextView
                            style="@style/TextStyle_Regular_14"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="People see your channel, not you"
                            android:textColor="@color/text_color" />

                        <androidx.appcompat.widget.AppCompatTextView
                            style="@style/TextStyle_Regular_14"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Your phone number, profile picture and name aren't shown to followers."
                            android:textColor="@color/text_gray" />

                    </androidx.appcompat.widget.LinearLayoutCompat>

                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/dimen_10"
                    android:gravity="center_vertical">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="@dimen/dimen_25"
                        android:layout_height="@dimen/dimen_25"
                        android:src="@drawable/ic_shield"
                        android:tint="@color/green_100" />

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen_16"
                        android:layout_marginEnd="@dimen/dimen_24"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <androidx.appcompat.widget.AppCompatTextView
                            style="@style/TextStyle_Regular_14"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="You're responsible for your channel"
                            android:textColor="@color/text_color" />

                        <androidx.appcompat.widget.AppCompatTextView
                            style="@style/TextStyle_Regular_14"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Your channel need to follow our guidelines and is reviewed agains them."
                            android:textColor="@color/text_gray" />

                    </androidx.appcompat.widget.LinearLayoutCompat>

                </androidx.appcompat.widget.LinearLayoutCompat>


            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnContinue"
            style="@style/TextStyle_Medium_12"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_35"
            android:layout_marginHorizontal="@dimen/dimen_10"
            android:layout_marginTop="@dimen/dimen_20"
            android:layout_marginBottom="@dimen/dimen_20"
            android:background="@drawable/edittext_chat"
            android:backgroundTint="#008069"
            android:text="@string/LBL_CONTINUE"
            android:textColor="@color/text_color_inverted"
            android:textSize="@dimen/textSize_12" />

    </androidx.appcompat.widget.LinearLayoutCompat>

</layout>