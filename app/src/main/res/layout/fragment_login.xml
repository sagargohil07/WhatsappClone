<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:overScrollMode="never">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/background_common"
                android:orientation="vertical"
                android:padding="24dp"
                tools:context=".module.fragment.auth.LoginFragment">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="250dp"
                    android:src="@drawable/login" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvTitle"
                    style="@style/TextStyle_Semi_Bold_20"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_30"
                    android:text="@string/verify_your_nphone_number"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/textSize_28" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvInfo"
                    style="@style/TextStyle_Regular_16"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_10"
                    android:text="@string/we_will_send_you_one_time_password_on_your_phone"
                    android:textColor="@color/text_color" />

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_40"
                    android:layout_marginTop="@dimen/dimen_50">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/etCountryCode"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="@dimen/dimen_8"
                        android:background="@drawable/edittext_otp_bg"
                        android:drawableEnd="@drawable/ic_expand_down"
                        android:drawableTint="@color/text_color"
                        android:gravity="start|center"
                        android:maxEms="6"
                        android:padding="@dimen/dimen_10"
                        android:text="@string/_91"
                        android:textAlignment="center"
                        android:textColor="@color/text_color"
                        android:textColorHint="@color/dark_300"
                        android:textSize="@dimen/textSize_14" />

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/etNumber"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/edittext_otp_bg"
                        android:hint="@string/enter_number"
                        android:inputType="numberDecimal"
                        android:paddingHorizontal="16dp"
                        android:textColor="@color/text_color"
                        android:textColorHint="@color/dark_300"
                        android:textSize="@dimen/textSize_14" />

                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnNext"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_40"
                    android:layout_marginTop="@dimen/dimen_20"
                    android:alpha="0.5"
                    android:background="@drawable/button_bg"
                    android:backgroundTint="#008069"
                    android:enabled="false"
                    android:text="@string/next"
                    android:textColor="@color/white" />

            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.core.widget.NestedScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>